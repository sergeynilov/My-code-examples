{
    "preset": "psr12",
    "rules": {
        "simplified_null_return": true,
        "phpdoc_single_line_var_spacing": false,
        "binary_operator_spaces": {
            "default": "single_space"
        },
        "class_attributes_separation": {
            "elements": {
                "const": "none",
                "method": "one",
                "property": "none",
                "trait_import": "none"
            }
        },
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        }
    }
}
